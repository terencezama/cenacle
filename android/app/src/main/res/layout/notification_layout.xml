<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imgRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_radio_black_36dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/txtNotifTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notif_player_title"
        android:layout_centerVertical="true"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/imgRadio"
        android:layout_toEndOf="@+id/imgRadio"
        android:textStyle="bold"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/imgNotifPlay"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgNotifClear"
        android:layout_toStartOf="@id/imgNotifClear"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:tint="@color/colorAccent"
        android:src="@drawable/ic_pause_black_24dp"/>

    <ImageView
        android:id="@+id/imgNotifClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
